+"""Prototype runtime for Adaptogen-style class execution.
+
+This module models the requested `(adapt)` behavior as a callable bridge:
+- collect `cron()` and `command()` from a target class
+- POST to local port 245
+- infer result type in a fixed order
+"""
+
+from __future__ import annotations
+
+import json
+from typing import Any, Callable
+from urllib import parse, request
+
+
+def _require_static_callable(target: type[Any], name: str) -> Callable[[], Any]:
+    attr = getattr(target, name, None)
+    if attr is None or not callable(attr):
+        raise TypeError(f"{target.__name__} must define callable static method {name}()")
+    return attr
+
+
+def _collect_payload(target: type[Any]) -> dict[str, str]:
+    cron_fn = _require_static_callable(target, "cron")
+    command_fn = _require_static_callable(target, "command")
+    return {
+        "cron": str(cron_fn()),
+        "command": str(command_fn()),
+    }
+
+
+def _post_local(payload: dict[str, str], timeout: float = 2.0) -> str:
+    data = parse.urlencode(payload).encode("utf-8")
+    http_req = request.Request(
+        "http://127.0.0.1:245/",
+        data=data,
+        headers={"Content-Type": "application/x-www-form-urlencoded"},
+        method="POST",
+    )
+    with request.urlopen(http_req, timeout=timeout) as resp:
+        body = resp.read()
+    return body.decode("utf-8", errors="replace").strip()
+
+
+def _infer_value(raw: str) -> Any:
+    try:
+        as_int = int(raw, 10)
+    except ValueError:
+        pass
+    else:
+        if as_int in (0, 1):
+            return bool(as_int)
+        return as_int
+
+    try:
+        return float(raw)
+    except ValueError:
+        pass
+
+    try:
+        decoded = json.loads(raw)
+    except json.JSONDecodeError:
+        pass
+    else:
+        if isinstance(decoded, (dict, list)):
+            return decoded
+
+    lowered = raw.lower()
+    if lowered == "true":
+        return True
+    if lowered == "false":
+        return False
+
+    return raw
+
+
+def adapt(target: type[Any], timeout: float = 2.0) -> Any:
+    """Execute Adaptogen flow for a class-like target.
+
+    Expected class contract:
+    - static method `cron()`
+    - static method `command()`
+    """
+
+    payload = _collect_payload(target)
+    raw = _post_local(payload, timeout=timeout)
+    return _infer_value(raw)
+
+
+__all__ = ["adapt"]
